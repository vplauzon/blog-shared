{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "app-insights-name": {
            "metadata": {
                "description": "Name of the app insights"
            },
            "type": "string"
        },
        "deploymentStorageAccountName": {
            "type": "string",
            "minLength": 5,
            "metadata": {
                "description": "Unique name for the storage account used for deployments"
            }
        },
        "logsStorageAccountName": {
            "type": "string",
            "minLength": 5,
            "metadata": {
                "description": "Unique name for the ADLS gen 2 storage account used to store AI and LA logs long term"
            }
        },
        "kustoClusterName": {
            "type": "string",
            "minLength": 5,
            "metadata": {
                "description": "Name of Kusto cluster"
            }
        },
        "apimName": {
            "type": "string",
            "minLength": 2,
            "metadata": {
                "description": "API-M's Name"
            }
        },
        "appPlanName": {
            "metadata": {
                "description": "..."
            },
            "defaultValue": "blog-app-plan",
            "type": "string"
        },
        "dashboardName": {
            "metadata": {
                "description": "..."
            },
            "defaultValue": "blog-dashboard",
            "type": "string"
        }
    },
    "variables": {
        "appInsightsId": "[resourceId('Microsoft.Insights/components', parameters('app-insights-name'))]",
        "artefact container name": "artefacts",
        "logs container name": "artefacts",
        "kusto log database": "ailogs"
    },
    "resources": [
        {
            "type": "Microsoft.Insights/components",
            "name": "[parameters('app-insights-name')]",
            "apiVersion": "2015-05-01",
            "location": "[resourceGroup().location]",
            "tags": {
            },
            "kind": "web",
            "properties": {
                "Application_Type": "web"
            },
            "dependsOn": [
            ]
        },
        {
            "apiVersion": "2019-04-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('deploymentStorageAccountName')]",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_RAGRS"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true
            },
            "resources": [
                {
                    "apiVersion": "2019-04-01",
                    "type": "blobServices/containers",
                    "name": "[concat('default/', variables('artefact container name'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', parameters('deploymentStorageAccountName'))]"
                    ],
                    "properties": {
                        "publicAccess": "None"
                    }
                },
                {
                    "apiVersion": "2019-04-01",
                    "type": "managementPolicies",
                    "name": "default",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', parameters('deploymentStorageAccountName'))]"
                    ],
                    "properties": {
                        "policy": {
                            "rules": [
                                {
                                    "name": "delete-old-artefacts",
                                    "enabled": true,
                                    "type": "Lifecycle",
                                    "definition": {
                                        "filters": {
                                            "blobTypes": [
                                                "blockBlob"
                                            ],
                                            "prefixMatch": [
                                                "[parameters('containerName')]"
                                            ]
                                        },
                                        "actions": {
                                            "baseBlob": {
                                                "tierToCool": {
                                                    "daysAfterModificationGreaterThan": 1
                                                },
                                                "delete": {
                                                    "daysAfterModificationGreaterThan": 3
                                                }
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "apiVersion": "2019-04-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('logsStorageAccountName')]",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "isHnsEnabled": true,
                "supportsHttpsTrafficOnly": true
            },
            "resources": [
                {
                    "apiVersion": "2019-04-01",
                    "type": "blobServices/containers",
                    "name": "[concat('default/', variables('logs container name'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', parameters('logsStorageAccountName'))]"
                    ],
                    "properties": {
                        "publicAccess": "None"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Kusto/clusters",
            "apiVersion": "2019-05-15",
            "name": "[parameters('kustoClusterName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Dev(No SLA)_Standard_D11_v2",
                "capacity": "1",
                "tier": "basic"
            },
            "properties": {
            },
            "resources": [
                {
                    "type": "databases",
                    "apiVersion": "2019-05-15",
                    "name": "[variables('kusto log database')]",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Kusto/clusters', parameters('kustoClusterName'))]"
                    ],
                    "properties": {
                    },
                    "resources": [
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.ApiManagement/service",
            "apiVersion": "2019-01-01",
            "name": "[parameters('apimName')]",
            "location": "[resourceGroup().location]",
            "tags": {
            },
            "properties": {
                "notificationSenderEmail": "apimgmt-noreply@mail.windowsazure.com",
                "hostnameConfigurations": [
                ],
                "additionalLocations": [
                ],
                "customProperties": {
                },
                "certificates": [
                ],
                "enableClientCertificate": false,
                "publisherEmail": "nobody@vplauzon.com",
                "publisherName": "api-admin"
            },
            "sku": {
                "name": "Consumption"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "resources": [
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[parameters('appPlanName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic"
            },
            "properties": {
                "name": "[parameters('appPlanName')]",
                "computeMode": "Dynamic"
            },
            "kind": "linux"
        },
        {
            "type": "Microsoft.Portal/dashboards",
            "apiVersion": "2019-01-01-preview",
            "name": "[parameters('dashboardName')]",
            "dependsOn": [
                "[variables('appInsightsId')]"
            ],
            "location": "[resourceGroup().location]",
            "tags": {
                "hidden-title": "Blog Dashboard"
            },
            "properties": {
                "lenses": {
                    "0": {
                        "order": 0,
                        "parts": {
                            "0": {
                                "position": {
                                    "x": 0,
                                    "y": 0,
                                    "rowSpan": 5,
                                    "colSpan": 10
                                },
                                "metadata": {
                                    "inputs": [
                                        {
                                            "name": "ComponentId",
                                            "value": {
                                                "SubscriptionId": "[subscription().subscriptionId]",
                                                "ResourceGroup": "[resourceGroup().name]",
                                                "Name": "[parameters('app-insights-name')]",
                                                "ResourceId": "[variables('appInsightsId')]"
                                            }
                                        },
                                        {
                                            "name": "Query",
                                            "value": "pageViews \r\n| where timestamp > ago(10d) \r\n| summarize Hits=count() by bin(timestamp, 1d)\r\n| render columnchart \n"
                                        },
                                        {
                                            "name": "PartTitle",
                                            "value": "Page Views"
                                        },
                                        {
                                            "name": "PartSubTitle",
                                            "value": "Last 10 days"
                                        },
                                        {
                                            "name": "resourceTypeMode",
                                            "value": "components"
                                        },
                                        {
                                            "name": "ControlType",
                                            "value": "AnalyticsChart"
                                        },
                                        {
                                            "name": "SpecificChart",
                                            "value": "Bar"
                                        },
                                        {
                                            "name": "TimeRange",
                                            "value": {
                                                "relative": {
                                                    "duration": 240,
                                                    "timeUnit": 24
                                                }
                                            },
                                            "isOptional": true
                                        },
                                        {
                                            "name": "DashboardId",
                                            "isOptional": true
                                        },
                                        {
                                            "name": "Dimensions",
                                            "value": {
                                                "xAxis": {
                                                    "name": "timestamp",
                                                    "type": "datetime"
                                                },
                                                "yAxis": [
                                                    {
                                                        "name": "Hits",
                                                        "type": "long"
                                                    }
                                                ],
                                                "splitBy": [
                                                ],
                                                "aggregation": "Sum"
                                            }
                                        },
                                        {
                                            "name": "Version",
                                            "value": "1.0"
                                        }
                                    ],
                                    "type": "Extension/AppInsightsExtension/PartType/AnalyticsPart",
                                    "settings": {
                                    },
                                    "asset": {
                                    }
                                }
                            },
                            "1": {
                                "position": {
                                    "x": 10,
                                    "y": 0,
                                    "rowSpan": 5,
                                    "colSpan": 10
                                },
                                "metadata": {
                                    "inputs": [
                                        {
                                            "name": "ComponentId",
                                            "value": {
                                                "SubscriptionId": "[subscription().subscriptionId]",
                                                "ResourceGroup": "[resourceGroup().name]",
                                                "Name": "[parameters('app-insights-name')]",
                                                "ResourceId": "[variables('appInsightsId')]"
                                            }
                                        },
                                        {
                                            "name": "Query",
                                            "value": "pageViews \r\n| where timestamp > ago(1d) \r\n| summarize Hits=count() by bin(timestamp, 1h)\r\n| render columnchart \n"
                                        },
                                        {
                                            "name": "PartTitle",
                                            "value": "Page Views"
                                        },
                                        {
                                            "name": "PartSubTitle",
                                            "value": "Last 24 hours"
                                        },
                                        {
                                            "name": "resourceTypeMode",
                                            "value": "components"
                                        },
                                        {
                                            "name": "ControlType",
                                            "value": "AnalyticsChart"
                                        },
                                        {
                                            "name": "SpecificChart",
                                            "value": "Bar"
                                        },
                                        {
                                            "name": "TimeRange",
                                            "isOptional": true
                                        },
                                        {
                                            "name": "DashboardId",
                                            "isOptional": true
                                        },
                                        {
                                            "name": "Dimensions",
                                            "value": {
                                                "xAxis": {
                                                    "name": "timestamp",
                                                    "type": "datetime"
                                                },
                                                "yAxis": [
                                                    {
                                                        "name": "Hits",
                                                        "type": "long"
                                                    }
                                                ],
                                                "splitBy": [
                                                ],
                                                "aggregation": "Sum"
                                            }
                                        },
                                        {
                                            "name": "Version",
                                            "value": "1.0"
                                        }
                                    ],
                                    "type": "Extension/AppInsightsExtension/PartType/AnalyticsPart",
                                    "settings": {
                                    },
                                    "asset": {
                                    }
                                }
                            },
                            "2": {
                                "position": {
                                    "x": 0,
                                    "y": 5,
                                    "rowSpan": 5,
                                    "colSpan": 10
                                },
                                "metadata": {
                                    "inputs": [
                                        {
                                            "name": "ComponentId",
                                            "value": {
                                                "SubscriptionId": "[subscription().subscriptionId]",
                                                "ResourceGroup": "[resourceGroup().name]",
                                                "Name": "[parameters('app-insights-name')]",
                                                "ResourceId": "[variables('appInsightsId')]"
                                            }
                                        },
                                        {
                                            "name": "Query",
                                            "value": "exceptions \r\n| where timestamp > ago(10d) \r\n| summarize Errors=count() by bin(timestamp, 1d)\r\n| render columnchart \n"
                                        },
                                        {
                                            "name": "PartTitle",
                                            "value": "Errors"
                                        },
                                        {
                                            "name": "PartSubTitle",
                                            "value": "Last 10 days"
                                        },
                                        {
                                            "name": "resourceTypeMode",
                                            "value": "components"
                                        },
                                        {
                                            "name": "ControlType",
                                            "value": "AnalyticsChart"
                                        },
                                        {
                                            "name": "SpecificChart",
                                            "value": "Bar"
                                        },
                                        {
                                            "name": "TimeRange",
                                            "isOptional": true
                                        },
                                        {
                                            "name": "DashboardId",
                                            "isOptional": true
                                        },
                                        {
                                            "name": "Dimensions",
                                            "value": {
                                                "xAxis": {
                                                    "name": "timestamp",
                                                    "type": "datetime"
                                                },
                                                "yAxis": [
                                                    {
                                                        "name": "Errors",
                                                        "type": "long"
                                                    }
                                                ],
                                                "splitBy": [
                                                ],
                                                "aggregation": "Sum"
                                            }
                                        },
                                        {
                                            "name": "Version",
                                            "value": "1.0"
                                        }
                                    ],
                                    "type": "Extension/AppInsightsExtension/PartType/AnalyticsPart",
                                    "settings": {
                                    },
                                    "asset": {
                                    }
                                }
                            },
                            "3": {
                                "position": {
                                    "x": 10,
                                    "y": 5,
                                    "rowSpan": 5,
                                    "colSpan": 10
                                },
                                "metadata": {
                                    "inputs": [
                                        {
                                            "name": "ComponentId",
                                            "value": {
                                                "SubscriptionId": "[subscription().subscriptionId]",
                                                "ResourceGroup": "[resourceGroup().name]",
                                                "Name": "[parameters('app-insights-name')]",
                                                "ResourceId": "[variables('appInsightsId')]"
                                            }
                                        },
                                        {
                                            "name": "Query",
                                            "value": "pageViews \r\n| where timestamp > ago(1d)\r\n| where url startswith \"https://vincentlauzon.com/20\"\r\n| summarize view=sum(1) by url, name\r\n| order by view\r\n| project name, view, name2=name\r\n| limit 10\r\n| render columnchart"
                                        },
                                        {
                                            "name": "PartTitle",
                                            "value": "Top 10 Articles"
                                        },
                                        {
                                            "name": "PartSubTitle",
                                            "value": "Last 24 hours"
                                        },
                                        {
                                            "name": "resourceTypeMode",
                                            "value": "components"
                                        },
                                        {
                                            "name": "ControlType",
                                            "value": "AnalyticsChart"
                                        },
                                        {
                                            "name": "SpecificChart",
                                            "value": "Bar"
                                        },
                                        {
                                            "name": "TimeRange",
                                            "isOptional": true
                                        },
                                        {
                                            "name": "DashboardId",
                                            "isOptional": true
                                        },
                                        {
                                            "name": "Dimensions",
                                            "value": {
                                                "xAxis": {
                                                    "name": "name",
                                                    "type": "string"
                                                },
                                                "yAxis": [
                                                    {
                                                        "name": "view",
                                                        "type": "long"
                                                    }
                                                ],
                                                "splitBy": [
                                                    {
                                                        "name": "name2",
                                                        "type": "string"
                                                    }
                                                ],
                                                "aggregation": "Sum"
                                            }
                                        },
                                        {
                                            "name": "Version",
                                            "value": "1.0"
                                        }
                                    ],
                                    "type": "Extension/AppInsightsExtension/PartType/AnalyticsPart",
                                    "settings": {
                                    },
                                    "asset": {
                                    }
                                }
                            }
                        }
                    }
                },
                "metadata": {
                    "model": {
                        "timeRange": {
                            "value": {
                                "relative": {
                                    "duration": 72,
                                    "timeUnit": 1
                                }
                            },
                            "type": "MsPortalFx.Composition.Configuration.ValueTypes.TimeRange"
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
    }
}